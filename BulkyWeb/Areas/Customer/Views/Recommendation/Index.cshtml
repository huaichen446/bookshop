<!-- Areas/Customer/Views/Recommendation/Index.cshtml -->
@model RecommendationVM

<div class="container p-3">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Рекомендации (推荐)</h2>
        </div>
    </div>

    <!-- 个性化推荐部分 -->
    <div class="row pb-5">
        <div class="col-12">
            <h3 class="text-primary"><i class="bi bi-person-check"></i> Для Вас (为您推荐)</h3>
            <hr />
        </div>

        @foreach (var product in Model.PersonalizedProducts)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                        <div class="card">
                            @if (product.ProductImages != null && product.ProductImages.Count() > 0)
                            {
                                <img src="@product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
                            }
                            else
                            {
                                <img src="~/images/product/no-image.png" class="card-img-top rounded" />
                            }
                            <div class="card-body">
                                <div class="pl-1">
                                    <p class="card-title h5 text-primary">@product.Title</p>
                                    <p class="card-title text-info">by <b>@product.Author</b></p>
                                </div>
                                <div class="pl-1">
                                    <p>List Price: <strike>@product.ListPrice.ToString("c")</strike></p>
                                </div>
                                <div class="pl-1">
                                    <p>As low as: <b>@product.Price100.ToString("c")</b></p>
                                </div>
                            </div>
                            <div>
                                <a asp-area="Customer" asp-controller="Home" asp-action="Details"
                                   asp-route-productId="@product.Id"
                                   class="btn btn-primary form-control">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- 热门推荐部分 -->
    <div class="row pb-5">
        <div class="col-12">
            <h3 class="text-primary"><i class="bi bi-fire"></i> Популярные рекомендации (热门推荐)</h3>
            <hr />
        </div>

        <!-- 与个性化推荐部分相同的产品展示代码 -->
        @foreach (var product in Model.PopularProducts)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                        <div class="card">
                            @if (product.ProductImages != null && product.ProductImages.Count() > 0)
                            {
                                <img src="@product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
                            }
                            else
                            {
                                <img src="~/images/product/no-image.png" class="card-img-top rounded" />
                            }
                            <div class="card-body">
                                <div class="pl-1">
                                    <p class="card-title h5 text-primary">@product.Title</p>
                                    <p class="card-title text-info">by <b>@product.Author</b></p>
                                </div>
                                <div class="pl-1">
                                    <p>List Price: <strike>@product.ListPrice.ToString("c")</strike></p>
                                </div>
                                <div class="pl-1">
                                    <p>As low as: <b>@product.Price100.ToString("c")</b></p>
                                </div>
                            </div>
                            <div>
                                <a asp-area="Customer" asp-controller="Home" asp-action="Details"
                                   asp-route-productId="@product.Id"
                                   class="btn btn-primary form-control">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

  